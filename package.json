{
  "name": "x-clone-project",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "cross-env NODE_ENV=local turbo run dev",
    "dev:test": "cross-env NODE_ENV=test turbo run dev",
    "test": "cross-env NODE_ENV=test turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "docker:dev": "docker-compose up -d",
    "docker:test": "docker-compose --env-file .env.test up -d",
    "docker:all": "pnpm docker:dev && pnpm docker:test",
    "docker:reset": "docker-compose down -v && docker-compose --env-file .env.test down -v",
    "db:migrate:auth": "dotenv -e .env -- pnpm --filter @repo/auth -- run prisma:migrate",
    "db:migrate:twit": "dotenv -e .env -- pnpm --filter @repo/twit -- run prisma:migrate",
    "db:migrate:user": "dotenv -e .env -- pnpm --filter @repo/user -- run prisma:migrate",
    "db:migrate:all": "pnpm db:migrate:auth && pnpm db:migrate:twit && pnpm db:migrate:user",
    "db:push:auth:test": "dotenv -e .env.test -- pnpm --filter @repo/auth -- run prisma:db:push --force-reset",
    "db:push:twit:test": "dotenv -e .env.test -- pnpm --filter @repo/twit -- run prisma:db:push --force-reset",
    "db:push:user:test": "dotenv -e .env.test -- pnpm --filter @repo/user -- run prisma:db:push --force-reset",
    "db:push:test": "pnpm db:push:auth:test && pnpm db:push:twit:test && pnpm db:push:user:test",
    "test:e2e": "cross-env NODE_ENV=test pnpm db:test && dotenv -e .env.test -- jest --config ./apps/api-gateway/test/jest-e2e.json"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
